{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"useDefineForClassFields": true,
		"moduleResolution": "node",
		"allowJs": true,
		"strict": true,
		"jsx": "preserve",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"declaration": true,
		"lib": ["esnext"],
		"types": ["node"],
		"typeRoots": ["node_modules/@types"],
	},
	"include": ["*"],
	"exclude": ["node_modules"]
}
